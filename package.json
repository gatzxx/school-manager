{
    "name": "school-manager",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "lint:styles": "stylelint '**/*.{css,scss}'",
        "lint:styles:fix": "stylelint '**/*.{css,scss}' --fix",
        "check:all": "pnpm run format:check && pnpm run lint && pnpm run lint:styles",
        "fix:all": "pnpm run format && pnpm run lint:fix && pnpm run lint:styles:fix",
        "preview": "vite preview",
        "server": "json-server -w server/db.json -p 1009",
        "app": "concurrently \"pnpm run server\"  \"pnpm dev\"",
        "unit": "jest --config ./src/jest/jest.config.ts",
        "storybook": "storybook dev -p 6006 -c ./src/storybook",
        "build-storybook": "storybook build -c ./src/storybook",
        "prepare": "husky"
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@mui/icons-material": "^6.3.1",
        "@mui/material": "^6.3.1",
        "@reduxjs/toolkit": "^2.5.0",
        "i18next": "^24.2.1",
        "i18next-http-backend": "^3.0.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-i18next": "^15.4.0",
        "react-redux": "^9.2.0",
        "react-router-dom": "^7.1.1"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "3.2.3",
        "@eslint/js": "^9.17.0",
        "@storybook/addon-essentials": "8.5.0",
        "@storybook/addon-interactions": "8.5.0",
        "@storybook/addon-onboarding": "8.5.0",
        "@storybook/blocks": "8.5.0",
        "@storybook/react": "8.5.0",
        "@storybook/react-vite": "8.5.0",
        "@storybook/test": "8.5.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2.0",
        "@types/jest": "^29.5.14",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@types/react-router-dom": "^5.3.3",
        "@typescript-eslint/eslint-plugin": "^8.20.0",
        "@typescript-eslint/parser": "^8.20.0",
        "@vitejs/plugin-react": "^4.3.4",
        "concurrently": "^9.1.2",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-jest": "^28.11.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.16",
        "eslint-plugin-storybook": "^0.11.2",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "json-server": "1.0.0-beta.3",
        "prettier": "^3.4.2",
        "storybook": "8.5.0",
        "stylelint": "^16.13.1",
        "stylelint-config-standard": "^37.0.0",
        "stylelint-prettier": "^5.0.2",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "~5.6.2",
        "typescript-eslint": "^8.18.2",
        "vite": "^6.0.5"
    },
    "eslintConfig": {
        "extends": [
            "plugin:storybook/recommended"
        ]
    }
}
